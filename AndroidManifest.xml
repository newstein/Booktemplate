<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.sean.booktemplate"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/thumb" android:label="@string/app_name">
        <activity android:name="com.sean.booktemplate.MyBookMain"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.sean.intent.LAUNCHER" />
            </intent-filter>
        </activity>

<!--
// 전체 어플에서 보이게
<category android:name="android.intent.category.LAUNCHER" />
// 책장에서만 보이게
<category android:name="com.sean.intent.LAUNCHER" />
 -->

        <activity android:name="com.sean.booktemplate.MyBookImagePage"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>


        <activity android:name="com.sean.booktemplate.MyBookGallery"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>

        <activity android:name="com.sean.booktemplate.MyBookTextPage"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>

    </application>

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:anyDensity="true"
        />

</manifest>
